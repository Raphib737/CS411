<html ng-app="dashboardApp" lang="en">
	<head>
	  	<title>Dashboard</title>
	  	<link rel="stylesheet" type='text/css' href="./css/home.css">
<!-- 	  new york times, huffington post, BBC -->
	  	<style type="text/css">a {text-decoration: none}</style>
	  <!-- Latest compiled and minified CSS -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
	</head>

	<body ng-controller="nyCtrl">
		<nav id="navigation" class="navbar navbar-default">
			<a id="title" class="navbar-brand">Dashboard</a>
			    <ul class="nav navbar-nav navbar-right">
			      <li><button id="signout" type="button" class="btn btn-default">Log Out</a></li>
			    </ul>
			  </div>
		</nav>

		<!--<div id="body">-->
		<div id="container">
			<div id="left-section" class="col-md-4">
			<div class="header">
				<div class="dropdown">
					<button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">{{selectedItem}}
					<span class="caret"></span>
					</button>
					<ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
					<li id= "clickables" ng-repeat="a in subjects"><a ng-click="dropboxitemselected(a)">{{a}}</a></li>
					</ul>
					<input id="search" type="text" class="form-group" placeholder="Search for keywords"ng-model="search">
				</div>
			</div>
			<div id="news-section">
						<div ng-repeat="data in datas | filter: search">
								<div class="info" ng-style="infoStyle" ng-click="getDataUrl(data.url)	;infoStyle={'background-color':'#dbdbdb'}">
									<b>{{data.title}}</b>
									<br>{{data.abstract}}
								</div>		
							</div>
						</div>
				<div class="headerStocks">
					<span id="stockTitle"> Stocks </span>
				</div>
				<div id="stocks-section">
						<% for(var i=0; i<stocks.length;i++){ %>
						<div class="stock-info" ng-style="infoStyle">
							<b><%= stocks[i].resource.fields.name%></b> : <%= stocks[i].resource.fields.price %> 
								<% if(stocks[i].resource.fields.change!='' ){%> <%= %> <% } %>
						</div>
						<%}%>
					</div>
				</div>
			</div>

			<div id="right-section" class="col-md-7">
				<div id="weather"><form ng-submit="weather()"><input id="searchWeather" type="text" class="form-group" placeholder="Enter your location" ng-model="weatherInfo"><span class="weatherInform">Date: {{date}} | <b>{{locTitle}}</b> | Description: <b>{{texts}}</b> | High: <b>{{high}}</b> | Low: <b>{{low}}</b></span>
				</form>
				</div>

				<iframe ng-src='{{currentUrl}}' id="iframe"></iframe>
			</div>
		
		</div>

		<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
		<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
		<script src="./js/home.js"></script>
	    <script src="./js/controller.js"></script>
	</body>
</html>